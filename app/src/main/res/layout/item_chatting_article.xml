<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="16sp"
    android:paddingEnd="16sp"
    android:paddingTop="16sp">
<!--    android:layout_marginBottom="60sp"-->
<!--    val nickName : String,-->
<!--    val age : Int,-->
<!--    val imageUrl: String-->
    <ImageView
        android:id="@+id/item_chatting_article_thumbnailImageView"
        android:layout_width="110sp"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16sp"
        android:layout_height="110sp"/>
    <TextView
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16sp"
        app:layout_constraintStart_toEndOf="@id/item_chatting_article_thumbnailImageView"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/item_chatting_article_name"
        android:layout_width="0sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_chatting_article_gender"
        android:layout_width="0sp"
        app:layout_constraintTop_toBottomOf="@id/item_chatting_article_name"
        app:layout_constraintStart_toStartOf="@id/item_chatting_article_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6sp"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintStart_toStartOf="@id/item_chatting_article_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_chatting_article_gender"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="6sp"
        android:textColor="@color/black"
        android:id="@+id/item_chatting_article_mbti"
        android:layout_width="0sp"
        android:layout_height="wrap_content"/>
<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"/>-->



    <View
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/btn_rec"
        android:layout_width="0sp"
        android:layout_height="1sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>