<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="540sp"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="540sp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/hobby_title"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:gravity="center"
        android:text="선호하는 상대의 취미를 선택하세요"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divisionLineHobby"
        android:layout_width="wrap_content"
        android:layout_height="1sp"
        android:layout_marginBottom="30sp"
        android:background="@color/gray_horizon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hobby_title" />
    <CheckBox
        android:id="@+id/checkAllHobby"
        android:layout_width="85sp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="20sp"
        android:textColor="@drawable/selector_text_color"
        android:background="@drawable/check_box"
        android:padding="10sp"
        android:button="@null"
        android:text="전체 선택"/>
    <LinearLayout
        android:id="@+id/hobbyLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"

        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/hobbyMovie"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="영화"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyReading"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="독서"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyEating"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:textSize="12sp"
            android:text="맛집탐방"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyWorkOut"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="운동"
            android:textColor="@drawable/selector_text_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hobbyLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/hobbyCamping"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="캠핑"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyCoding"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="코딩"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyCafe"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="카페"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyHiking"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="등산"
            android:textColor="@drawable/selector_text_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hobbyLine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/hobbyBeer"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="맥주"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyTrip"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="여행"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyShopping"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="쇼핑"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyWalking"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="산책"
            android:textColor="@drawable/selector_text_color" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/hobbyLine4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/hobbyTalking"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="수다"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyBaseball"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:textSize="12sp"
            android:text="야구보기"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyRunning"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="러닝"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyClimbing"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:textSize="12sp"
            android:text="클라이밍"
            android:textColor="@drawable/selector_text_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/MBTILine5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/hobbyInstrument"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="악기연주"
            android:textSize="12sp"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyDriving"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="드라이브"
            android:textSize="12sp"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyInvest"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="재테크"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyPhoto"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:textSize="12sp"
            android:text="사진찍기"
            android:textColor="@drawable/selector_text_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hobbyLine6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/hobbyCook"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="요리"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyGame"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="게임"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyCoinSinging"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="코인\n노래방"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/hobbyRiding"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10sp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10sp"
            android:text="라이딩"
            android:textColor="@drawable/selector_text_color" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="32sp"
        android:background="@color/gray_horizon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hobbyLine6" />
</androidx.appcompat.widget.LinearLayoutCompat>