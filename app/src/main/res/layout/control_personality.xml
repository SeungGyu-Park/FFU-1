            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/personalityHumorous"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="유머러스한"
            android:textColor="@drawable/selector_text_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/personalityline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/personalityHumble"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="허세 없는"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/personalityIntel"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="지적인"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/personalityTimid"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="소심한"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/personalityCool"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="쿨한"
            android:textColor="@drawable/selector_text_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/personalityLine6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/personalityDdorai"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="또라이같은"
            android:textColor="@drawable/selector_text_color" />

        <CheckBox
            android:id="@+id/personalityKind"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/check_box"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
