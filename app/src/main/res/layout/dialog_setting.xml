<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_round_purple_radius_10"
    android:backgroundTint="@color/white"
    android:layout_gravity="center"
    android:layout_margin="50sp">

    <ImageButton
        android:id="@+id/dialog_setting_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:backgroundTint="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/dialog_setting_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/chat_center_backgroudcolor"
        android:textSize="20sp"
        android:text="로그아웃"
        android:textStyle="bold"
        android:background="@drawable/rect_round_purple_radius_10"
        android:backgroundTint="@color/gray_ec"
        android:layout_margin="20sp"
        app:layout_constraintTop_toBottomOf="@id/dialog_setting_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>